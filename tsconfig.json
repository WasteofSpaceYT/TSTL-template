{
  "compilerOptions": {
    "target": "ESNext",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
     "lib": ["ESNext"],
     "moduleResolution": "node",
     "types": ["lua-types/jit", "@typescript-to-lua/language-extensions"],
     "strict": true,
     "outDir": "dist",
     "allowJs": true,
     "baseUrl": ".",
     "module": "commonjs",
  },
  "tstl": {
    "luaTarget": "JIT"
  },
  "exclude": [
    "dist",
    "node_modules",
  ],
  "types": ["types"] 
}
